{
  "name": "iobroker.hausbus_de",
  "version": "1.5.2",
  "description": "Adapter to control haus-bus.de components.",
  "author": {
    "name": "Hermann Hoeschen",
    "email": "info@haus-bus.de"
  },
  "homepage": "http://www.haus-bus.de",
  "license": "MIT",
  "keywords": [
    "haus-bus.de",
    "homeserver",
    "relaimodule",
    "pushbuttons"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hausbus/ioBroker.hausbus_de.git"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.1.6",
    "ip": "^1.1.8"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.0",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@iobroker/adapter-dev": "^1.4.0",
    "@iobroker/testing": "^4.1.3",
    "chai": "^4.5.0",
    "chai-as-promised": "^8.0.2",
    "mocha": "^10.8.2",
    "proxyquire": "^2.1.3",
    "sinon": "^21.0.1",
    "sinon-chai": "^3.7.0"
  },
  "main": "main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "lib/",
    "www/",
    "io-package.json",
    "LICENSE",
    "main.js"
  ],
  "scripts": {
    "test:js": "mocha --config test/mocharc.custom.json \"{!(node_modules|test)/**/*.test.js,*.test.js,test/**/test!(PackageFiles|Startup).js}\"",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:js && npm run test:package",
    "translate": "translate-adapter",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/hausbusde/ioBroker.hausbus_de/issues"
  },
  "readmeFilename": "README.md",
  "overrides": {
    "@iobroker/adapter-core": "^3.1.6"
  }
}
